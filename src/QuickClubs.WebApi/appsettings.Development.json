{
  "ConnectionStrings": {
    "Database": "[user secret, see readme]"
  },
  "JwtSettings": {
    "Secret": "[user secret, see readme]",
    "ExpiryMinutes": 720,
    "Issuer": "quickclubs",
    "Audience": "quickclubs"
  },
  "EmailSettings": {
    "EmailEnabled": true,
    "DebugEmailTo": "[user secret, see readme]",
    "DefaultFromAddress": "registrations@clubengine.io",
    "DefaultFromDisplayName": "ClubEngine",
    "SmtpServer": "smtp-relay.sendinblue.com",
    "Port": 587,
    "Username": "[user secret, see readme]",
    "Password": "[user secret, see readme]"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Json.JsonFormatter"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}
